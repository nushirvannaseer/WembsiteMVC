@model Wembsite.Models.User

@{
    ViewBag.Title = "createNewPost";
}


<h2>Create a New Post</h2>
<link href="../../Content/LoginStyles.css" rel="stylesheet" type="text/css" />
<form onsubmit="" method="post" action="../../UserHome/PublishPost">
    <div>
        <text>Post Content:</text>
        <br />
        <textarea maxlength="30000" name="postContent" style="width:2000px; height:200px"></textarea>
        <br />
        <text>Privacy: </text><br />
        
        <input type="radio" name="privacy" id="Public" value="Public" />
        <label for="Public">Public</label><br />
        <input type="radio" name="privacy" id="Only My Followers" value="Only My Followers" />
        <label for="Only My Followers">Only My Followers</label><br />
        <input type="radio" name="privacy" id="Only Me" value="Only Me" />
        <label for="Only Me">Only Me</label><br />
        <button name="createPostBtn" type="submit">Post</button>
    </div>
</form>
<br />
@Html.ActionLink("Back to Profile Page", "Profile")



