@model Wembsite.Models.User

@{
    ViewBag.Title = "Profile";
}

<h2 style="color:white">Profile</h2>
<link href="../../Content/material.css" rel="stylesheet" type="text/css" />

<div class="card" style="padding-top:0px; max-width:40%">
    <form method="post" action="../UserHome/Search">
        <input class="searchBox" type ="text" name="searchText" placeholder="Search for Wembsiters..." />
        <button type="submit">Search</button>
    </form>
</div>

<div class="card" style="padding-top:0px; max-width:40%">
    <br />
    <label style="color:mediumpurple">Username: </label>
    <label style="color:white">@Model.username</label><br />
    <label style="color:mediumpurple">Name: </label>
    <label style="color:white">@Model.firstname @Model.lastname</label><br />
    <label style="color:mediumpurple">Email: </label> 
    <label style="color:white">@Model.email</label><br />

</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.username }) |
        @Html.ActionLink("Back to List", "Index")*@
    <div class="card" style="padding-top:0px; padding-left:15px; max-width:40%">
        <br />
        @Html.ActionLink("Homepage", "HomePage")<br />
        @Html.ActionLink("Create a New Post", "CreateNewPost")<br />
        @Html.ActionLink("View All My Posts", "AllPosts")<br />
        @Html.ActionLink("View all Wembsiters", "../AllUsers/Index")<br />
        @Html.ActionLink("Follow Requests", "FollowRequests", new { username = Model.username })<br />
        @Html.ActionLink("Followers", "Followers", new { username = Model.username })<br />
        @Html.ActionLink("Following", "Following", new { username = Model.username })<br />
        @Html.ActionLink("Log out", "LogoutUser")<br />
    </div>
</p>

