@model Wembsite.Models.User

@{
    ViewBag.Title = "Profile";
}

<h2 style="color:white">Profile</h2>
<link href="../../Content/material.css" rel="stylesheet" type="text/css" />

<div class="card" style="padding-top:0px; max-width:40%">
        <form method="post" action="../UserHome/Search">
            <input class="searchBox" style="color:white; border-color:rgb(46,46,46); padding-left:10px; background-color:rgb(100, 100, 100); height:30px; width:300px" type="text" name="searchText" placeholder="Search for Wembsiters..." />
            <button style="margin-top:30px" type="submit">Search</button>
        </form>
    </div>

    <div class="card" style="padding-top:0px; max-width:40%">
        <br />
        <label style="color:mediumpurple">Username: </label>
        <label style="color:white">@Model.username</label><br />
        <label style="color:mediumpurple">Name: </label>
        <label style="color:white">@Model.firstname @Model.lastname</label><br />
        <label style="color:mediumpurple">Email: </label>
        <label style="color:white">@Model.email</label><br />

    </div>
    <p>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <div class="card" style="padding-top:0px; padding-left:15px; max-width:40%">
            <br />
            <div class="flex-container" style="padding:0px 40px 10px 30px">
                <button onclick="location.href='@Url.Action("Homepage") ';return false;" class="tile" style="margin-left:10px; margin-right:10px; display:inline-block; width:100px; height:80px"><i class="material-icons"style="display:block">home</i>Home</button>
                <button onclick="location.href='@Url.Action("CreateNewPost") ';return false;" class="tile" style="margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons"style="display:block">add</i>Create</button>
                <button onclick="location.href='@Url.Action("AllPosts") ';return false;" class="tile" style="margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons"style="display:block">dashboard</i>My Posts</button>
                <button onclick="location.href='@Url.Action("../AllUsers/Index") ';return false;" class="tile" style="margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons"style="display:block">people</i>People</button>
                @if (Wembsite.Models.CRUD.NewRequests(Session["username"].ToString()) == true)
                {
                    <button onclick="location.href='@Url.Action("FollowRequests") ';return false;" class="tile" style="background-color:green; margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons"style="display:block">person_add</i>Requests</button>
                }
                else
                {
                    <button onclick="location.href='@Url.Action("FollowRequests") ';return false;" class="tile" style="margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons" style="display:block">person_add</i>Requests</button>
                }
                <button onclick="location.href='@Url.Action("Following") ';return false;" class="tile" style="margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons"style="display:block">check_box</i>Following</button>
                <button onclick="location.href='@Url.Action("Followers") ';return false;" class="tile" style="margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons"style="display:block">contactless</i>Followers</button>
                <button onclick="location.href='@Url.Action("LogoutUser") ';return false;" class="tile" style="margin-left:10px; margin-right:10px;display:inline-block;width:100px; height:80px"><i class="material-icons"style="display:block">exit_to_app</i>Log Out</button>
            </div>
        </div>
    </p>

