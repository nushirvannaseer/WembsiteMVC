
@using Wembsite.Models
@model Wembsite.Models.User
@*@using Wembsite.Models.*@
@{
    ViewBag.Title = "Login";
    //var alert;
    if (Model != null)
    {
        var alert = @ViewData["Message"];
    }
}



<!DOCTYPE html>
<html>


<link href="../../Content/LoginStyles.css" rel="stylesheet" type="text/css" />
<div>
    <form class="loginForm" name="loginForm" method="post" action="../../Login/VerifyCredentials" onsubmit="validateInput()">
        <h1>Wembsite</h1>
        <h2>Log in</h2>
        <br />
        <label style="color:darkred">@ViewData["Message"]</label><br />
        <label class="label" name="unLabel">Username:</label>
        <input class="inputField" type="text" name="un" placeholder="Username" required />
        <label class="label" name="pLabel">  Password:</label>
        <input class="inputField" type="password" name="upwd" placeholder="Password" required />
        <button name="loginBtn" type="submit">Log In</button>
        <br /><br /><text>New to Wembsite?</text>
        <a href="../../Login/SignUp">Click here to create an account!</a>
    </form>
</div>
</html>

<script>
    function validateInput() {
        var username = document.forms["loginForm"]["un"].value;
        var password = document.forms["loginForm"]["upwd"].value;
        if (username == "" || password == "") {
            alert("Username or Password fields cannot be blank!");
            return false;
        }

        return true;
    }
</script>



